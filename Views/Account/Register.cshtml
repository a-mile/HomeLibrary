@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "_SimpleLayout";
}

<div class="container body-content">
<div class="row" style="margin-top:100px">
    <div class="col-md-6 col-md-offset-3">
          <div class="title">
            <h2>Home Library</h2>
        </div>
        <section>
    <form asp-controller="Account" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal" role="form">
    <h4>Create a new account.</h4>
    <hr />
     @{
        if((string)ViewData["Message"] == "noaccount")
        {
            <div class="alert alert-info">
                 You don't have home library account yet. Please register before confirm invitation.
            </div>
        }
                   
    }
    <div asp-validation-summary="All" class="text-danger"></div>
    @Html.EditorForModel()
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default btn-block">Register</button>
        </div>
    </div>
    <p>
        <a asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]">Already have account?</a>
    </p>
    </form>
        </section>
    </div>
</div>
</div>