@model CreateBookViewModel

@{
    ViewData["PageTitle"] = "Create Book";
    Layout = "_MainLayout";
}


<div class="row">
    <div class="col-lg-12">
    <h1 class="page-header">@ViewData["PageTitle"]</h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-6">   
        <form asp-controller="Library" asp-action="CreateBook" method="post" class="form-horizontal" role="form">
                @Html.EditorForModel()
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-default btn-block">Add</button>
                    </div>
                </div>
            </form>
    </div>
</div>

