@{
    ViewData["Title"] = "My library";
    Layout = "_MainLayout";
}

<div class="row">
    <div class="col-lg-12">
    <h1 class="page-header">@ViewData["Title"]</h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="panel panel-default">
            <div class="panel-heading">
                Book list
            </div>
            <div class="panel-body">
                <div class="list-group">
                    <div class="list-group-item">Book1</div>
                    <div class="list-group-item">Book2</div>
                    <div class="list-group-item">Book3</div>
                </div>
                <a class="btn btn-default btn-block" href="#">Add new book</a>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                Guest list
            </div>
            <div class="panel-body">
                <div class="list-group">
                    <div class="list-group-item">Antoni</div>
                    <div class="list-group-item">Maria</div>
                    <div class="list-group-item">Kuba</div>
                </div>
                <a class="btn btn-default btn-block" href="#">Add new guest</a>
            </div>
        </div>
    </div>
</div>

