@model InviteUserViewModel

@{
    ViewData["PageTitle"] = "Invite user";
    Layout = "_MainLayout";
}


<div class="row">
    <div class="col-lg-12">
    <h1 class="page-header">@ViewData["PageTitle"]</h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-6">   
        <form asp-controller="Library" asp-action="InviteUser" method="post" class="form-horizontal" role="form">
                <div asp-validation-summary="All" class="text-danger"></div>
                @Html.EditorForModel()
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-default btn-block">Send invitation link</button>
                    </div>
                </div>
            </form>
    </div>
</div>

