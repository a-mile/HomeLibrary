@model NewBookViewModel

@{
    ViewData["Title"] = "New Book";
    Layout = "_MainLayout";
}


<div class="row">
    <div class="col-lg-12">
    <h1 class="page-header">@ViewData["Title"]</h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-6">
        <form asp-controller="Library" asp-action="NewBook" method="post" class="form-horizontal" role="form">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Title" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Author" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Author" class="form-control" />
                        <span asp-validation-for="Author" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Publisher" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Publisher" class="form-control" />
                        <span asp-validation-for="Publisher" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="RelaseDate" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="RelaseDate" class="form-control" />
                        <span asp-validation-for="RelaseDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Language" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Language" class="form-control" />
                        <span asp-validation-for="Language" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="ISBN" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="ISBN" class="form-control" />
                        <span asp-validation-for="ISBN" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-default btn-block">Add</button>
                    </div>
                </div>
            </form>
    </div>
</div>

