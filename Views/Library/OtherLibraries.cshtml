@model IEnumerable<LibrarySummaryViewModel>

@{
    ViewData["Title"] = "Other libraries";
    Layout = "_MainLayout";
}


<div class="row">
    <div class="col-lg-12">
    <h1 class="page-header">@ViewData["Title"]</h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="panel panel-default">
            <div class="panel-heading">
                Libraries list
            </div>
            <div class="panel-body">
                <div class="list-group">
                    @foreach(var library in Model)
                    {
                        <div class="list-group-item">
                            <span class="pull-right text-muted">Liczba użytkowników: @library.UsersCount</span>
                            <a asp-controller="Library" asp-action="GetLibrary" asp-route-libraryId="@library.Id"><h4>@library.Owner library</h4></a>
                            
                            Liczba książek: @library.BooksCount
                            
                        </div>
                    }
                    @if(Model.Count() == 0)
                    {
                        @: Nobody invite you to own library.
                    }
                </div>
            </div>
        </div>
    </div>
</div>

